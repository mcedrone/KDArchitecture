- content_for :title, 'Contact'
%ul.contact_background.fixed
	-if @bg_image
		%li= image_tag "#{@bg_image.filename}", height: '100%', width: '100%'

.wrapper.table{style: 'width: 100%;'}
	%ul.menu.white_menu{style: 'display: table-row;'}
		.menu_logo{style: 'width: 90%; margin-left: 5%; margin-right: 5%; padding-top: 10px;'}
			= link_to (image_tag 'duck_logo_white.png', width: '125px;'), root_path
			%br
			ARCHITECTURE & INTERIORS
		.menu_links{style: 'width: 90%; margin-left: 5%; margin-right: 5%;'}
			%li= link_to 'Architecture', '/architecture'
			%li= link_to 'Interior Design', '/interior_design'
			%li= link_to 'Renovations', '/renovations'
			%li= link_to 'Additions', '/additions'
			%li= link_to 'Works In Progress', '/works_in_progress'

	.content{style: 'width: 630px; text-align: left; padding-left: 0;'}
		.contact_info{style: 'width: 225px; display: inline-block; vertical-align: top; margin-top: 85px; text-align: center;'}
			53 Central Avenue
			%br
			Needham, MA 02494
			%br
			617-422-0952
			%br
			781-449-4901
			%br
			info@kentduckham.com
		.iframe_holder{style: 'width: 400px; display: inline-block;'}
			%iframe{frameborder: "0", height: "300", src: "https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2950.4698723159345!2d-71.22906139999999!3d42.311175899999995!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89e3822f42115841%3A0x31dca50b5516d490!2s53+Central+Ave%2C+Needham+Heights%2C+MA+02494!5e0!3m2!1sen!2sus!4v1407892810378", style: "border:0", width: "400"}

	.push

%footer.white_footer
	%ul#footer_menu
	.top_bah
	%li= link_to 'About', "/about"
	%li= link_to 'Recognition', "/recognition"
	%li= link_to 'Affiliates', "/affiliates"
	%li= link_to 'Contact', "/contact"
